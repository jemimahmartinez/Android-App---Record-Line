<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        style="@style/CategoryCardStyle">
        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/vinyl1"
            android:layout_gravity="center"
            android:id="@+id/icon_image_view" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"
            android:layout_toRightOf="@id/icon_image_view"
            android:layout_gravity="top"
            android:id="@+id/text_view_album_name"
            android:text="Album Name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/text_view_artist_name"
            android:textSize="15sp"
            android:layout_below="@id/text_view_album_name"
            android:layout_toRightOf="@id/icon_image_view"
            android:text="Artist Name" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="10sp"
            android:layout_below="@id/text_view_artist_name"
            android:layout_toRightOf="@id/icon_image_view"
            android:text="Top Song" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>